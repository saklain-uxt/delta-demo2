<% layout("/layouts/boilerplate") -%>
<div class="row mt-3" >
      <div class="col-8  offset-2">
           

      <h1>create listing</h1>
      <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
            <div class="mb-3">
                   <lable for="title"class="form-lable">title</lable>

            <input name="listing[title]" placeholder="Title"type="text" class="form-control" required>
              <div class="valid-feedback">Title look good</div>
            </div>
           
           
            <div class="mb-3">
                   <lable for="description"class="form-lable">description</lable>
            <textarea name="listing[description]" placeholder="Enter title" class="form-control" required></textarea>
             <div class="invalid-feedback">please enter short description</div>
            </div>
           
            <div class="mb-3">
                  
                   <!-- <lable for="image"class="form-lable">image link</lable>
            <input name="listing[image]" placeholder="Image URL" type="text"class="form-control">
            </div>
             <div class="mb-3"> -->
                  
                   <lable for="image"class="form-lable">uplode image</lable>
            <input name="listing[image]"  type="file"class="form-control">
            required
            </div>

            <div class="row" >
            <div class="mb-3 col-md-4">
                   <lable for="price"class="form-lable">price</lable>
            <input name="listing[price]" placeholder="Price"  class="form-control" required>
             <div class="invalid-feedback">price should be valid</div>
            </div>
            
            <div class="mb-3 col-md-8">
                  <lable for="country"class="form-lable">country</lable>
            <input name="listing[country]" placeholder="Country" type="text" class="form-control" required>
            <div class="invalid-feedback">country should be valid</div>
            </div>
            </div>
         
            <div class="mb-3">
                   <lable for="location"class="form-lable">location</lable>
            <input name="listing[location]" placeholder="Location" type="text" class="form-control" required>
            <div class="invalid-feedback">location should be valid</div>
          
            </div>
           
            <button class=" btn btn-dark add-btn mt-3">Create</button>
           
      </form>
       </div>
      </div>
